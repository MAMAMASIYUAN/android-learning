<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- 删除对话框线性布局对于_id字段 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CompanyName: "
            android:textSize="20dp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/chooseCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/delete_linearLayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout">

        <!-- _id提示 -->

        <TextView
            android:id="@+id/insert_detail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Id: "
            android:textSize="20dp"
            android:gravity="center" />

        <!-- _id输入 -->

        <EditText
            android:id="@+id/delete_text_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/delete_linearLayout_id"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/delete_detail_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/delete_linearLayout_id"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/delete_detail_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/delete_linearLayout_id"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 确认插入按钮 -->

    <!-- 取消插入按钮 -->

</RelativeLayout>
